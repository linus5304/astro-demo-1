---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import { Home } from "../components/Home";
import { faBars, faCaretDown } from "@fortawesome/free-solid-svg-icons";
import { FontAwesomeIcon } from "@fortawesome/react-fontawesome";
---

<Layout title="Welcome to Astro.">
  <div
    class="bg-gradient-to-t to-app-pink from-app-red p-6 font-montserrat-alternates flex items-center"
  >
    <div class="flex flex-1">
      <FontAwesomeIcon
        icon={faBars}
        className="w-4 text-white font-bold mr-2"
      />
      <div class="font-light text-white">Menu</div>
    </div>
    <div>
      <FontAwesomeIcon
        icon={faCaretDown}
        className="w-2 text-white font-bold mr-2"
      />
    </div>
  </div>
  <Home />
</Layout>
